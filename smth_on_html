      <form action="submission.html" method="GET">
        <label for="username">Username:</label>
        <br>
				<!--Add the pattern attribute to the input below-->  <!-- required - Обязательное поле, minlength - минимальная длина поля, pattern - ограничение на символы -->
				<input id="username" name="username" type="text" required minlength="3" maxlength="15" pattern = "[a-zA-Z0-9]+">
        <br>
        <label for="pw">Password:</label>
        <br>
				<input id="pw" name="pw" type="password" required minlength="8" maxlength="15">
